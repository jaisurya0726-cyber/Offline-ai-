<body>

    <!-- Loading Screen -->
    <div id="loader"><div class="spinner"></div></div>

    <!-- 3D Canvas Container -->
    <div id="canvas-container"></div>

    <!-- UI Overlay -->
    <main id="ui-container">
        <header>
            <h1>3D Rubik's Cube</h1>
        </header>
        <section>
            <p>Drag background to rotate view. Use buttons or keyboard to rotate layers.</p>
            <div id="status-msg"></div>
        </section>
        <section class="controls-group">
            <button id="btn-scramble">ðŸ”€ Scramble Cube</button>
            <button id="btn-reset" class="secondary">â†º Reset Cube</button>
        </section>
        <section style="margin-top: 15px; font-size: 0.8rem; color: #888;">
            <strong>Keyboard Shortcuts:</strong><br>
            <span class="key-hint">F</span> Front <span class="key-hint">B</span> Back<br>
            <span class="key-hint">U</span> Up <span class="key-hint">D</span> Down<br>
            <span class="key-hint">L</span> Left <span class="key-hint">R</span> Right<br>
            (Hold <span class="key-hint">Shift</span> to reverse)
        </section>
    </main>

    <!-- Import Three.js as an ES Module -->
    <script type="importmap">
        {
            "imports": {
                "three": "https://unpkg.com/three@0.160.0/build/three.module.js",
                "three/addons/": "https://unpkg.com/three@0.160.0/examples/jsm/"
            }
        }
    </script>

    <script type="module">
        import * as THREE from 'three';
        import { OrbitControls } from 'three/addons/controls/OrbitControls.js';
        import { RoundedBoxGeometry } from 'three/addons/geometries/RoundedBoxGeometry.js';

        // --- Configuration ---
        const CUBE_SIZE = 1;
        const SPACING = 0.02; // Gap between cubies
        const ANIMATION_SPEED = 300; // ms per 90 degree turn
        
        // Colors mapped to standard Rubik's cube
        // Right(x+), Left(x-), Top(y+), Bottom(y-), Front(z+), Back(z-)
        const COLORS = {
            base: 0x111111, // Internal plastic color
            R: 0xb90000, // Red
            L: 0xff5900, // Orange
            U: 0xffffff, // White
            D: 0xffd500, // Yellow
            F: 0x009b48, // Green
            B: 0x0045ad  // Blue
        };

        // --- Global Variables ---
        let scene, camera, renderer, controls;
        let allCubies = []; // Array holding all 27 meshes
        let isAnimating = false;
        let pivot; // Helper object for rotating slices
        
        // UI Elements
        const statusMsg = document.getElementById('status-msg');
        const loader = document.getElementById('loader');

        // --- Initialization ---
        function init() {
            // Scene setup
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x222222);

            // Camera
            camera = new THREE.PerspectiveCamera(45, window.innerWidth / window.innerHeight, 0.1, 100);
            camera.position.set(5, 5, 7);

            // Renderer
            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(window.devicePixelRatio);
            document.getElementById('canvas-container').appendChild(renderer.domElement);

            // Controls (Orbit)
            controls = new OrbitControls(camera, renderer.domElement);
            controls.enableDamping = true;
            controls.dampingFactor = 0.05;
            controls.enablePan = false;
            controls.minDistance = 3;
            controls.maxDistance = 15;

            // Lighting
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);

            const dirLight = new THREE.DirectionalLight(0xffffff, 1.5);
            dirLight.position.set(10, 20, 10);
            scene.add(dirLight);

            const backLight = new THREE.DirectionalLight(0xffffff, 0.5);
            backLight.position.set(-10, -10, -5);
            scene.add(backLight);

            // Pivot for rotation (invisible parent)
            pivot = new THREE.Object3D();
            pivot.rotation.order = 'XYZ'; // Important for Euler rotations
            scene.add(pivot);

            // Create the Rubik's Cube
            createRubiksCube();

            // Event Listeners
            window.addEventListener('resize', onWindowResize);
            document.getElementById('btn-scramble').addEventListener('click', scrambleCube);
            document.getElementById('btn-reset').addEventListener('click', resetCube);
            window.addEventListener('keydown', onKeyDown);

            // Remove loader
            setTimeout(() => {
                loader.style.opacity = '0';
                setTimeout(() => loader.remove(), 500);
            }, 500);

            // Start loop
            animate();
        }

        // --- Cube Creation ---
        function createRubiksCube() {
            // Clear existing
            allCubies.forEach(c => scene.remove(c));
            allCubies = [];

            // Geometry
            // Using RoundedBoxGeometry for better visual appeal
            const geometry = new RoundedBoxGeometry(CUBE_SIZE, CUBE_SIZE, CUBE_SIZE, 4, 0.1);

            // Offset to center the cube
            const offset = (CUBE_SIZE + SPACING) * 1.5; // *1.5 because range is -1, 0, 1 (halfway is 1.5)

            for (let x = -1; x <= 1; x++) {
                for (let y = -1; y <= 1; y++) {
                    for (let z = -1; z <= 1; z++) {
                        
                        // Create materials based on position
                        // Order: Right, Left, Top, Bottom, Front, Back
                        const materials = [
                            new THREE.MeshStandardMaterial({ color: x === 1 ? COLORS.R : COLORS.base, roughness: 0.1 }),
                            new THREE.MeshStandardMaterial({ color: x === -1 ? COLORS.L : COLORS.base, roughness: 0.1 }),
                            new THREE.MeshStandardMaterial({ color: y === 1 ? COLORS.U : COLORS.base, roughness: 0.1 }),
                            new THREE.MeshStandardMaterial({ color: y === -1 ? COLORS.D : COLORS.base, roughness: 0.1 }),
                            new THREE.MeshStandardMaterial({ color: z === 1 ? COLORS.F : COLORS.base, roughness: 0.1 }),
                            new THREE.MeshStandardMaterial({ color: z === -1 ? COLORS.B : COLORS.base, roughness: 0.1 }),
                        ];

                        const mesh = new THREE.Mesh(geometry, materials);
                        
                        // Set Position
                        mesh.position.set(
                            x * (CUBE_SIZE + SPACING),
                            y * (CUBE_SIZE + SPACING),
                            z * (CUBE_SIZE + SPACING)
                        );

                        // Store original coordinate for logic helpers (optional, but good for debugging)
                        mesh.userData = { initialX: x, initialY: y, initialZ: z };

                        // Add black border/gap visual trick using internal geometry or just spacing
                        // The geometry is slightly smaller than the unit spacing, creating the black lines.
                        
                        scene.add(mesh);
                        allCubies.push(mesh);
                    }
                }
            }
        }

        // --- Rotation Logic ---

        /*
         * Rotate a slice of the cube.
         * axis: 'x', 'y', or 'z'
         * index: -1, 0, 1 (which slice to rotate)
         * direction: 1 (clockwise) or -1 (counter-clockwise) relative to the axis
         */
        function rotateLayer(axis, index, direction, duration = ANIMATION_SPEED) {
            if (isAnimating) return Promise.resolve();
            isAnimating = true;

            return new Promise((resolve) => {
                // 1. Identify cubies in the slice
                const activeCubies = [];
                const epsilon = 0.1; // Tolerance for float comparison

                allCubies.forEach(cube => {
                    // Get world position
                    const worldPos = new THREE.Vector3();
                    cube.getWorldPosition(worldPos);

                    // Check if cube belongs to the slice
                    // We divide by (CUBE_SIZE + SPACING) to normalize back to -1, 0, 1 roughly
                    let val = 0;
                    if (axis === 'x') val = worldPos.x;
                    if (axis === 'y') val = worldPos.y;
                    if (axis === 'z') val = worldPos.z;

                    const normalizedIndex = index * (CUBE_SIZE + SPACING);

                    if (Math.abs(val - normalizedIndex) < epsilon) {
                        activeCubies.push(cube);
                    }
                });

                // 2. Attach to pivot
                pivot.rotation.set(0, 0, 0);
                pivot.position.set(0, 0, 0);
                
                // Parent cubies to pivot without moving them visually
                activeCubies.forEach(cube => {
                    pivot.attach(cube);
                });

                // 3. Animate Pivot
                const targetRotation = (Math.PI / 2) * direction * -1; // -1 to match standard notation direction
                const startRotation = { value: 0 };
                
                const startTime = Date.now();

                function animateRotation() {
                    const now = Date.now();
                    const progress = Math.min((now - startTime) / duration, 1);
                    
                    // Ease out cubic
                    const ease = 1 - Math.pow(1 - progress, 3);
                    
                    const currentAngle = targetRotation * ease;
                    pivot.rotation[axis] = currentAngle;

                    if (progress < 1) {
                        requestAnimationFrame(animateRotation);
                    } else {
                        // 4. Cleanup
                        finishRotation();
                        resolve();
                    }
                }
                animateRotation();

                function finishRotation() {
                    pivot.updateMatrixWorld(); // Ensure final transform is calculated
                    
                    activeCubies.forEach(cube => {
                        // Save world transform
                        cube.updateMatrixWorld();
                        const worldPos = new THREE.Vector3();
                        const worldQuat = new THREE.Quaternion();
                        cube.getWorldPosition(worldPos);
                        cube.getWorldQuaternion(worldQuat);

                        // Re-parent to scene
                        scene.attach(cube);
                        
                        // Round positions to prevent float drift
                        cube.position.x = Math.round(worldPos.x / (CUBE_SIZE + SPACING)) * (CUBE_SIZE + SPACING);
                        cube.position.y = Math.round(worldPos.y / (CUBE_SIZE + SPACING)) * (CUBE_SIZE + SPACING);
                        cube.position.z = Math.round(worldPos.z / (CUBE_SIZE + SPACING)) * (CUBE_SIZE + SPACING);
                        
                        // Round rotations (quaternions are tricky, but snapping to nearest 90 deg euler helps)
                        const euler = new THREE.Euler().setFromQuaternion(worldQuat);
                        euler.x = Math.round(euler.x / (Math.PI/2)) * (Math.PI/2);
                        euler.y = Math.round(euler.y / (Math.PI/2)) * (Math.PI/2);
                        euler.z = Math.round(euler.z / (Math.PI/2)) * (Math.PI/2);
                        cube.rotation.copy(euler);
                    });

                    pivot.rotation.set(0,0,0);
                    isAnimating = false;
                }
            });
        }

        // --- Interaction Logic ---

        async function scrambleCube() {
            if (isAnimating) return;
            statusMsg.innerText = "Scrambling...";
            
            const axes = ['x', 'y', 'z'];
            const indices = [-1, 0, 1];
            const dirs = [1, -1];
            const count = 20; // Number of moves

            // Speed up animation for scrambling
            const fastSpeed = 100;

            for (let i = 0; i < count; i++) {
                const axis = axes[Math.floor(Math.random() * axes.length)];
                const index = indices[Math.floor(Math.random() * indices.length)];
                const dir = dirs[Math.floor(Math.random() * dirs.length)];
                
                await rotateLayer(axis, index, dir, fastSpeed);
            }

            statusMsg.innerText = "Scrambled!";
            setTimeout(() => statusMsg.innerText = "", 2000);
        }

        function resetCube() {
            if (isAnimating) return;
            statusMsg.innerText = "Resetting...";
            // Simple reset: just recreate the cube
            // A true reverse-solve is complex, recreating is visually sufficient for this tool
            createRubiksCube();
            setTimeout(() => statusMsg.innerText = "", 1000);
        }

        function onKeyDown(event) {
            if (isAnimating) return;
            
            const key = event.key.toUpperCase();
            const shift = event.shiftKey;
            const direction = shift ? -1 : 1; // Shift reverses direction
            
            // Mapping keys to standard Rubik's notation layers relative to camera
            // However, since the camera moves, 'U' (Up) should always be absolute Y axis
            // 'L' (Left) is usually absolute X axis in 3D space logic if we don't lock camera orientation
            
            // Absolute Axis Mapping:
            // L/R -> X Axis
            // U/D -> Y Axis
            // F/B -> Z Axis
            
            switch(key) {
                case 'R': rotateLayer('x', 1, -direction); break; // Right face
                case 'L': rotateLayer('x', -1, direction); break; // Left face
                case 'U': rotateLayer('y', 1, -direction); break; // Up face
                case 'D': rotateLayer('y', -1, direction); break; // Down face
                case 'F': rotateLayer('z', 1, -direction); break; // Front face
                case 'B': rotateLayer('z', -1, direction); break; // Back face
            }
        }

        // --- Standard Animation Loop ---
        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        function animate() {
            requestAnimationFrame(animate);
            controls.update();
            renderer.render(scene, camera);
        }

        // Start
        init();

    </script>
</body>
</html>